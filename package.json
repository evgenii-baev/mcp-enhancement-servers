{
  "name": "mcp-enhancement-servers",
  "version": "1.0.0",
  "description": "Серверы для улучшения мышления в MCP",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && mkdir -p dist/src/models && cp src/models/*.json dist/src/models/ 2>/dev/null || true",
    "clean": "rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/index.js",
    "dev": "tsc-watch --onSuccess \"node dist/index.js\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "start:ai-integration": "node dist/ai-integration/start-server.js",
    "validate:params": "node dist/tools/parameter-validator.js",
    "fix:params": "node dist/tools/fix-parameter-descriptions.js"
  },
  "keywords": [
    "mcp",
    "thinking",
    "enhancement",
    "servers",
    "mental-models",
    "debugging",
    "sequential-thinking",
    "brainstorming",
    "stochastic-algorithms"
  ],
  "author": "MCP Team",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}